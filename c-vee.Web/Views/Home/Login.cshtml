@model LoginViewModel

<!-- login -->
<div class="d-flex flex-column justify-content-center align-items-center" style="padding-top:10vh;">

    
        @if (ViewBag.LoginErrMsg == true)
        {
            <div class="col-4 p-0">

                <div style="text-align:center;line-height:18px;" asp-validation-summary="All" class="alert alert-danger" id="summary"></div>

            </div>
        }
    
    <form asp-controller="Home" asp-action="Login" method="post">
        <div class="">
            <div class="col-sm-12">
                <div class="col-12 text-center">
                    <div class="form-group">
                        <a class="btn g-btn" href="">
                            <img src="~/images/g-logo.png" width="27" alt="" />
                            Continue with Google
                        </a>
                    </div>
                    <hr class="hr5" />

                    <div class="form-group">
                        <input type="text" asp-for="Email" class="form-control" placeholder="Email" required autocomplete="off" />
                    </div>
                    <div>
                        <span class="text-danger font-italic small" asp-validation-for="@Model.Email"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" type="password" class="form-control" placeholder="password" required autocomplete="off"/>
                    </div>
                    <div>
                        <span class="text-danger font-italic small" asp-validation-for="@Model.Password"></span>
                    </div>
                    <div class="row">
                        <div class="col-5 col-sm-6 ">
                            <div class="form-check" style="font-size:12px;">
                                <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label asp-for="RememberMe" class="pt-1" for="exampleCheck1"> Remember me</label>
                            </div>
                        </div>
                        <div class="col-7 col-sm-6 p-0">
                            <div class="form-check pt-1" style="font-size:12px;">
                                <a class="text-right" asp-controller="Auth" asp-action="">Forgot Password?</a>
                            </div>
                        </div>

                    </div>
                    <div class="row mb-4">
                        <div class="col-12 form-group">
                            <button class="btn login-btn border border-0" type="submit">Login</button>
                        </div>
                        <div class="col-12" style="font-size:14px">
                            Create a new Account?<a asp-action="Register" asp-controller="Auth"> Register  </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>

</div>

